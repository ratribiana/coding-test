{
    "name": "coding-test",
    "version": "1.0.0",
    "description": "TypeScript + Express + Mongoose + MongoDB",
    "author": "Robert Anthony Tribiana",
    "engines": {
      "node": "^20.11.x",
      "yarn": "1.x"
    },
    "license": "ISC",
    "scripts": {
      "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
      "dev": "cross-env NODE_ENV=development nodemon",
      "build": "swc src -d dist --source-maps --copy-files",
      "build:tsc": "tsc && tsc-alias",
      "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
      "lint": "eslint --ignore-path .gitignore --ext .js,.ts src/ ",
      "lint:fix": "npm run lint -- --fix",
      "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
      "deploy:dev": "pm2 start ecosystem.config.js --only dev",
      "postinstall": "npx husky install",
      "clean": "rimraf dist",
      "clearDB": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --transpile-only src/utils/clearDB.ts"
    },
    "dependencies": {
      "axios": "^1.7.2",
      "base64-min": "^2.0.0",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.14.1",
      "compression": "^1.7.4",
      "cookie-parser": "^1.4.6",
      "cors": "^2.8.5",
      "dotenv": "^16.4.5",
      "envalid": "^8.0.0",
      "express": "^4.19.2",
      "helmet": "^7.1.0",
      "hpp": "^0.2.3",
      "moment-timezone": "^0.5.45",
      "mongoose": "^8.4.4",
      "morgan": "^1.10.0",
      "winston": "^3.13.0",
      "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
      "@swc/cli": "^0.4.0",
      "@swc/core": "^1.6.6",
      "@types/compression": "^1.7.5",
      "@types/cookie-parser": "^1.4.7",
      "@types/cors": "^2.8.17",
      "@types/express": "^4.17.21",
      "@types/hpp": "^0.2.6",
      "@types/jest": "^29.5.12",
      "@types/morgan": "^1.9.9",
      "@types/node": "^20.14.9",
      "@types/supertest": "^2.0.16",
      "@typescript-eslint/eslint-plugin": "^7.14.1",
      "@typescript-eslint/parser": "^7.14.1",
      "app-module-path": "^2.2.0",
      "axios-mock-adapter": "^1.22.0",
      "casual": "^1.6.2",
      "cross-env": "^7.0.3",
      "eslint": "^8.56.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-prettier": "^5.1.3",
      "husky": "^9.0.11",
      "jest": "^29.7.0",
      "lint-staged": "^15.2.7",
      "nodemon": "^3.1.4",
      "pm2": "^5.4.1",
      "prettier": "^3.3.2",
      "supertest": "^7.0.0",
      "ts-jest": "^29.1.5",
      "ts-node": "^10.9.2",
      "tsc-alias": "^1.8.8",
      "tsconfig-paths": "^4.2.0",
      "typescript": "^5.5.2"
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    }
  }
  